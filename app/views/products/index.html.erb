<div>
  <h1 class="text-center">Christmas Best Sellers </h1>
  <h1><%= @user.name if @user%> </h1>
</div><br>

<div class="row">
  <% @products.in_groups_of(3) do |group| %>
    <% group.each do |product| %>
      <div class="col-md">
        <% if product %>
          
          <div class="card">
            
            <% if product.img_url %>
              <a href="<%= product_path(product) %>">
                <img class="card-img-top img-thumbnail"
                    style="object-fit: cover; height: 18rem;"
                    src="<%= product.img_url %>"
                    alt="<%= product.name %>">
              </a>
            <% end %>

            <div class="card-body text-center">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">
                Â£<%= product.price_formatted %>
              </p>
              <a href="<%= product_path(product) %>" class="btn btn-info">
                View product
              </a>
            </div>

          </div>

        <% end %>
      </div>
    <% end %>
    <div class="w-100"></div><br>
  <% end %>
</div>