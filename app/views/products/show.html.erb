<div class="row">

  <div class="col-md-7">
    <img class="img-thumbnail"
      src="<%= @product.img_url %>"
      alt="<%= @product.name %>">
  </div>

  <div class="col-md-5">
    <h1><%= @product.name %></h1>
    <p>
      By <span class="badge badge-info"><%=@product.seller_name%></span>
    </p>
    
    <h5>Description:</h5>
    <p>
      <%= @product.description %>
    </p>

    <h5>Price</h5>
    <p>Â£<%= @product.price_formatted %></p>

    <form method="post" action="/orders">
      <input type="hidden" name="product_id" value="<%= @product.id %>">
      <button type="submit"
              id="add-to-basket"
              class="btn btn-success btn-block">
        Buy Now
      </button>
    </form>

  </div>

</div>
