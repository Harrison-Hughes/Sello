<h1>Your basket</h1><br>
<p><%=flash[:notice]%></p>
<%@basket.each do |item|%>
    <%product = Product.find(item[:product_id])%>
    <h4><%=link_to product.name, product_path(product.id)%></h4>
    <%=product.description%><br>
    <b>price: Â£<%=product.price_formatted%></b><br>
    <b>quantity: <%=item[:quantity]%></b><br>
    <%= form_tag remove_one_from_basket_path do %>
      <%= hidden_field_tag 'product_id', product.id%>
      <%= submit_tag "Remove from basket" %>
    <% end %>
    <%= form_tag remove_all_from_basket_path do %>
      <%= hidden_field_tag 'product_id', product.id%>
      <%= submit_tag "Remove all from basket" %>
    <% end %>
    <br><br>
<%end%>

