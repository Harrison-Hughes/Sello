<h1>Order #<%= @order.id * 10000 %><br>£<%= @order.total_cost_formatted %></h1>

<h2>Thanks for your order, <%= @buyer.name.capitalize %>!</h2>

<hr>

<h3>Here is all the cool stuff you bought:</h3><br>

<div class="row">
  <% @order.order_product_joins.in_groups_of(4).each do |group| %>
    <% group.each do |item| %>
      <div class="col-md">
        <% if item %>
          <div class="card text-center">
            <% if item.product.img_url %>
              <a href="<%= product_path(item.product) %>">
                <img class="card-img-top img-thumbnail"
                    style="object-fit: cover; height: 12rem;"
                    src="<%= item.product.img_url %>"
                    alt="<%= item.product.name %>">
              </a>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= item.product.name %></h5>
              <p class="card-text">
                <%= item.product.description %>
              </p>
              <p class="card-text">
                £<%= item.purchase_price_formatted %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
